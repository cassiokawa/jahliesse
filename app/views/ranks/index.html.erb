<p id="notice"><%= notice %></p>

<h1>Ranking dos leitores</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Leitor</th>
      <th>Pontos</th>
      <th> Livros de <%= Estilo.find(1).estilo  %></th>
      <th> Livros de <%= Estilo.find(2).estilo  %></th>
      <th> Livros de <%= Estilo.find(3).estilo  %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to(user.fullname, rank_path(user.id)) %></td>
        <td><%= user.point %></td>
        <td><%= user.estilo_um %> &nbsp;&nbsp; <% if user.trofeu_um == 1 %> Trofeu  <% end %> </td>
        <td><%= user.estilo_dois %> &nbsp;&nbsp;<% if user.trofeu_dois == 1 %> Trofeu  <% end %> </td>
        <td><%= user.estilo_tres %> &nbsp;&nbsp;<% if user.trofeu_tres == 1 %> Trofeu  <% end %> </td>
          
      </tr>
    <% end %>
  </tbody>
</table>

<br>
