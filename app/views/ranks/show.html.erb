<h3>Resumo dos Pontos e Trofeus de <%= @user.fullname %></h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Leitor</th>
      <th>Pontos</th>
      <th> <%= Estilo.find(1).estilo  %></th>
      <th> <%= Estilo.find(2).estilo  %></th>
      <th> <%= Estilo.find(3).estilo  %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @user.fullname %></td>
        <td><%= @user.point %></td>
        <td><%= @user.estilo_um %> &nbsp;&nbsp; <% if @user.trofeu_um == true %> <span class="glyphicon glyphicon-tower" aria-hidden="true"></span>  <% end %> </td>
        <td><%= @user.estilo_dois %> &nbsp;&nbsp;<% if @user.trofeu_dois == true %> <span class="glyphicon glyphicon-tower" aria-hidden="true"></span>  <% end %> </td>
        <td><%= @user.estilo_tres %> &nbsp;&nbsp;<% if @user.trofeu_tres == true %> <span class="glyphicon glyphicon-tower" aria-hidden="true"></span>  <% end %> </td>
          
      </tr>
    
  </tbody>
</table>

<br>
<h3>Livros Lidos por <%= @user.fullname %></h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Autor</th>
      <th>Pages</th>
      <th>Estilo</th>
      <th>Leu?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reads.each do |book| %>
      <tr>
        <td><%= link_to(book.nome , book ) %></td>
        <td><%= book.autor %></td>
        <td><%= book.pages %></td>
        <td><%= Estilo.find(book.estilo_id).estilo %></td>
        <td><%= current_user.have_read?(book) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

